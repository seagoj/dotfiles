### Local Development
Host vagrant *-local
    HostName 127.0.0.1
    Port 2222
    User ubuntu
    IdentityFile ~/code/config_management/puppet/.vagrant/machines/default/virtualbox/private_key

Host local
    HostName 127.0.0.1
    Port 2222
    User vagrant
    IdentityFile .vagrant/machines/default/virtualbox/private_key

### Bonfyre
Host bonfyre-*
    IdentityFile ~/code/config_management/puppet/bonfyre_vagrant_key.pem

Host bonfyre-directory-sync
    Hostname 54.88.213.177
    User ubuntu
    IdentityFile ~/.ssh/bonfyre/DirectorySync.pem

Host bonfyre-local
    HostName 127.0.0.1
    Port 2222
    User vagrant
    IdentityFile ~/code/config_management/puppet/bonfyre_vagrant_key.pem
    LocalForward 3310 localhost:3310
    LocalForward 9200 localhost:9200

Host bonfyre-local-chompy
    HostName 127.0.0.1
    Port 2222
    User vagrant
    IdentityFile ~/code/config_management/puppet/bonfyre_vagrant_key.pem
    ProxyCommand sudo service autossh-tunnel-dev-rds stop && ssh -N -L 3310:chompyrds.bonfyreapp.com:3306 jseago@dogebox.bonfyreapp.com
    LocalForward 3310 localhost:3310
    LocalForward 9200 localhost:9200

