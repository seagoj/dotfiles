# Example Configuration
#
# Host domain.com
#     User root
#     Port 22
#     IdentityFile ~/.ssh/id_rsa # path to ssh	key
#     IdentitiesOnly Yes # Only attempt to login via ssh key
#     PubkeyAuthentication No # Bypass attempting SSH key authentication
#     LocalForward localport server:remoteport
##

Host *
    IdentityFile ~/.ssh/id_rsa

### Repos
Host bitbucket repo
    HostName bitbucket.org
    User git

Host github repo
    HostName github.com
    User git

Host gitlab repo
    HostName git.seago.io
    User git

Host synology
    HostName home.seagoj.com
    Port 18450
    User admin

Host synology-local
    Hostname 192.168.88.244
    Port 22
    User root

