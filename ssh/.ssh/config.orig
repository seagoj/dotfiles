# Example Configuration
#
# Host domain.com
#     User root
#     Port 22
#     IdentityFile ~/.ssh/id_rsa # path to ssh  key
#     IdentitiesOnly Yes # Only attempt to login via ssh key
#     PubkeyAuthentication No # Bypass attempting SSH key authentication
#     LocalForward localport server:remoteport
##

Host *
    IdentityFile ~/.ssh/id_rsa
    IdentitiesOnly yes

# bonfyre

# personal
Host *-personal
    IdentityFile ~/.ssh/id_rsa.personal

Host github-personal
    HostName github.com
    User git

Host gitlab-personal
    HostName git.seago.io
    User git

Host kerberos kerberos-personal
    HostName seago.io
    User root

Host dokku dokku-personal
    HostName www.seago.io
    User dokku

Host synology
    HostName home.seagoj.com
    Port 18450
    User admin

Host synology-local
    Hostname 192.168.0.111
    Port 22
    User admin

Host alexandria alexandria-personal
    HostName git.seago.io
    User root

Host anvil*
    HostName anvil.seago.io
    User seagoj
    ForwardX11 yes
    ForwardAgent yes
    # api
    LocalForward 8079 localhost:8079
    # web
    LocalForward 8080 localhost:8080
    # jenkins
    LocalForward 38080 localhost:38080
    LocalForward 38082 localhost:38082
    LocalForward 38083 localhost:38083
    # graylog
    LocalForward 9001 localhost:9001
    LocalForward 9003 localhost:9003
    # redshift
    LocalForward 35439 localhost:35439
    # zabbix
    LocalForward 8082 localhost:8082
    LocalForward 8083 localhost:8083

Host anvil
    Port 1845

Host anvil-from-mac
    Port 1845
    XAuthLocation /opt/X11/bin/xauth

Host anvil-local
    Port 22

Host pi-hole pihole
    Hostname pi-hole.seago.io
    User pi
    ForwardX11 yes
    ForwardAgent yes

