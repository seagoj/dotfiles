#!/bin/zsh

#
# Aliases e to $EDITOR and provides a default argument of the current directory
#
# USAGE:
#
#   $ e
#   # => opens the current directory in $EDITOR
#
#   $ e .
#   $ e /opt
#   # => opens the specified directory in $EDITOR

if [[ $# -eq 0 ]] ; then
    exec $EDITOR .
elif [[ $# -eq 1 ]] ; then
    exec fasd -f -e $EDITOR $1
else
    exec $EDITOR -O "$*"
fi

