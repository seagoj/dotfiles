#!/bin/bash

case "$1" in
*)
    if [[ $# -eq 1 && "$1" != "--help" ]]; then
        if [[ ! -f /var/log/mycli-$1.log ]]; then
            sudo touch /var/log/mycli-$1.log
            sudo chmod a+rw /var/log/mycli-$1.log
        fi
        mycli -d ${1} --logfile /var/log/mycli-$1.log
    else
        mycli "$@"
    fi
    ;;
esac
