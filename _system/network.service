[Unit]
Description=Static IP COnnectivity
Wants=network.target
Before=network.target
BindsTo=sys-subsystem-net-devices-enp2s0.device
After=sys-subsystem-net-devices-enp2s0.device

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/sbin/ip link set dev enp2s0 up
ExecStart=/sbin/ip addr add 192.168.100.14/24 dev enp2s0
ExecStart=/sbin/ip route add default via 192.168.100.1

ExecStop=/sbin/ip addr flush dev enp2s0
ExecStop=/sbin/ip link set dev enp2s0 down

[Install]
WantedBy=multi-user.target
