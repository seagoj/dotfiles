#!/usr/bin/env ruby

codeDir = ENV['CODE']

Dir.glob("#{codeDir}/*").each do |d|
    if File.directory?("#{d}/.git")
        output = `cd #{d} && git status -s`
        unless output.empty?
            puts "--- #{d[codeDir.length+1, d.length-codeDir.length]} ----------"
            puts output
            # puts "-------------------"
        end
    end
end
