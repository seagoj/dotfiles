[user]
	name = Jeremy Seago
    email = seagoj@gmail.com
[url "git@github.com:"]
    insteadof = https://github.com
[github]
    user = seagoj
[core]
    pager = less -FRSX
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    editor = nvim -f
    autocrlf = input
    ; safecrlf = true
	ignorecase = false
	excludesfile = /Users/Admin/.gitignore_global
[web]
    browser = open
[push]
    default = current
[rebase]
    autosquash = true
[merge]
    summary = true
    defaultToUpstream = true
    tool = fugitive
[mergetool "fugitive"]
    cmd = nvim -f -c \"Gdiff\" \"$MERGED\"
[diff]
    tool = nvimdiff
[difftool]
    prompt = true
[difftool "nvimdiff"]
    cmd = nvim -d -u ~/.config/nvim/init.vim \"$LOCAL\" \"$REMOTE\"
[ghi]
	token = !security find-internet-password -a seagoj -s github.com -l 'ghi token' -w
[color]
    diff = auto
    status = auto
    branch = auto
    interactive  = auto
    ui = true
    pager =  true
[color "branch"]
    current = yellow reverse
    local   = yellow
    remote  = green
[color "diff"]
    meta = blue
    frag = magenta
    old  = red
    new  = green
[color "status"]
    added = yellow
    changed = green
    untracked = blue
[alias]
    lg = log --color --graph  --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)%Creset' --abbrev-commit
	ctags = !.git/hooks/ctags
    clean-local-merged = "!. $XDG_CONFIG_HOME/git/helpers && delete_local_merged_branches"
    st = "status"
    a = "add"
    dn = "diff --name-only"
[branch]
	autosetuprebase = always
[init]
	templatedir = "$XDG_CONFIG_HOME/git/template"
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
