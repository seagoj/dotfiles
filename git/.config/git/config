[user]
	name = Jeremy Seago
	email = seagoj@gmail.com
[url "git@github.com:"]
	insteadof = https://github.com
[github]
	user = seagoj
[core]
	pager = less -FRSX
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor = nvim -f
	autocrlf = input
	; safecrlf = true
	ignorecase = false
	excludesfile = /Users/Admin/.gitignore_global
[web]
	browser = open
[push]
	default = current
[rebase]
	autosquash = true
[merge]
	summary = true
	defaultToUpstream = true
	algorithm = histogram
	tool = fugitive
	; tool = filemerge
[mergetool "filemerge"]
	algorithm = histogram
	cmd = /usr/bin/opendiff \"$LOCAL\" \"$REMOTE\" -merge \"$MERGED\"
[mergetool "fugitive"]
	algorithm = histogram
	cmd = nvim -f -c \"Gdiff\" \"$MERGED\"
[diff]
	tool = nvimdiff
	; tool = icdiff
	algorithm = patience
[difftool]
	prompt = true
[difftool "nvimdiff"]
	cmd = nvim -d -u ~/.config/nvim/init.vim \"$LOCAL\" \"$REMOTE\"
[difftool "icdiff"]
	cmd = icdiff \"$LOCAL\" \"$REMOTE\"
[ghi]
	token = !security find-internet-password -a seagoj -s github.com -l 'ghi token' -w
[color]
	diff = auto
	status = auto
	branch = auto
	interactive  = auto
	ui = true
	pager =  true
[color "branch"]
	current = yellow reverse
	local	= yellow
	remote	= green
[color "diff"]
	; meta = blue
	frag = magenta
	old  = red
	new  = green
[color "status"]
	added = yellow
	changed = green
	untracked = blue
[alias]
	a = "add"
	amend = commit --amend --no-edit
	clean-local-merged = "!. ~/.config/git/helpers && delete_local_merged_branches"
	clean-merged = "!. ~/.config/git/helpers && delete_local_merged_branches"
	ctags = !.git/hooks/ctags
	dn = "diff --name-only"
	hash = "rev-parse HEAD | pbcopy"
	lg = log --color --graph  --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)%Creset' --abbrev-commit
	st = "status"
	undo = "!f() { \
		git reset --hard $(git rev-parse --abbrev-ref HEAD)@{${1-1}};\
	}; f"
[branch]
	autosetuprebase = always
[init]
	templatedir = "~/.config/git/template"
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[filter "tabify"]
	clean = unexpand -t 4
[filter "spacify"]
	clean = expand -t 4
[filter "co_4_spaces_commit_tabs"]
	smudge = expand -t 4
	clean = unexpand -t 4
[filter "co_tabs_commit_4_spaces"]
	smudge = unexpand -t 4
	clean = expand -t 4
[filter "co_2_spaces_commit_tabs"]
	smudge = expand -t 2
	clean = unexpand -t 2
[filter "co_tabs_commit_2_spaces"]
	smudge = unexpand -t 2
	clean = expand -t 2
