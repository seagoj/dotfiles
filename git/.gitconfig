[user]
    name = Jeremy Seago
    email = seagoj@gmail.com
[github]
    user = seagoj
[core]
    pager = less -FRSX
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    editor = vim -f
    autocrlf = input
    safecrlf = true
	ignorecase = false
[web]
    browser = open
[push]
    default = simple
[rebase]
    autosquash = true
[merge]
    summary = true
    defaultToUpstream = true
    tool = fugitive
[mergetool "fugitive"]
    cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[diff]
    tool = vimdiff
[ghi]
	token = !security find-internet-password -a seagoj -s github.com -l 'ghi token' -w
[color]
    diff = auto
    status = auto
    branch = auto
    interactive  = auto
    ui = true
    pager =  true
[color "branch"]
    current = yellow reverse
    local   = yellow
    remote  = green
[color "diff"]
    meta = blue
    frag = magenta
    old  = red
    new  = green
[color "status"]
    added = yellow
    changed = green
    untracked = blue
[alias]
    lg = log --color --graph  --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)%Creset' --abbrev-commit
	ctags = !.git/hooks/ctags
[branch]
	autosetuprebase = always
[init]
	templatedir = ~/.git_template
