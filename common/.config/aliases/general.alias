## User not `root`
if [ $UID -ne 0 ]; then
    function shutdown() {
        sudo shutdown ${@:--h now}
    }
    function reboot() {
        sudo shutdown -r ${@:-now}
    }
fi

## General
### Ping
alias ping='ping -c 5'
alias ping1000='ping -c 1000'
alias fastping='ping -c 100 -i.2'
alias pingfast='fastping'

