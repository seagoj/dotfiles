# vim: filetype=sh:

. "$XDG_FUNCTIONS_HOME"/tmux.sh

bonfyre_apiWindow() {
    pushd "$XDG_SOURCE_HOME"/bonfyre/bonfyre_app >/dev/null
    tmux_newWindow "bonfyre"
    if which wego &>/dev/null; then
        tmux send-keys -t 1 'wego 2' C-m
    fi
    tmux send-keys -t 3 'vagrant-up' C-m
    tmux send-keys -t 4 "${FETCHER} && wwwtxt" C-m
    popd >/dev/null
}

bonfyre_webWindow() {
    pushd ~/code/bonfyre/pyweb >/dev/null
    tmux_newWindow "pyweb"
    tmux send-keys -t 3 'vagrant-up'
    tmux send-keys -t 4 '${FETCHER} && wwwtxt' C-m
    popd >/dev/null
}

bonfyre_socialWindow() {
    pushd ~ >/dev/null
    tmux_newWindow "social" --no-layout
    tmux send-keys -t 1 'mutt' C-m
    popd >/dev/null
}

bonfyre_apiWindow
bonfyre_webWindow
bonfyre_socialWindow
tmux_startSession
