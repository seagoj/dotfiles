# vim: filetype=sh:

. "$XDG_FUNCTIONS_DIR"/tmux.sh

bonfyre::apiWindow() {
    pushd ~/code/bonfyre/bonfyre_app >/dev/null
    tmux::newWindow "bonfyre"
    if which wego &>/dev/null; then
        tmux send-keys -t 1 'wego 2' C-m
    fi
    tmux send-keys -t 3 'vagrant-up' C-m
    tmux send-keys -t 4 "${FETCHER} && wwwtxt" C-m
    popd >/dev/null
}

bonfyre::webWindow() {
    pushd ~/code/bonfyre/pyweb >/dev/null
    tmux::newWindow "pyweb"
    tmux send-keys -t 3 'vagrant-up'
    tmux send-keys -t 4 '${FETCHER} && wwwtxt' C-m
    popd >/dev/null
}

bonfyre::socialWindow() {
    pushd ~ >/dev/null
    tmux::newWindow "social" --no-layout
    tmux send-keys -t 1 'mutt' C-m
    popd >/dev/null
}

bonfyre::apiWindow
bonfyre::webWindow
bonfyre::socialWindow
tmux::startSession
