if (( $+commands[tag]  )); then
    which ag &>/dev/null && export TAG_SEARCH_PROG=ag
    which rg &>/dev/null && export TAG_SEARCH_PROG=rg
    alias_file="${TAG_ALIAS_FILE:-~/tmp/tag_aliases}"

    if [[ ! -f "${alias_file}" ]]; then
        mkdir -p $(dirname "${alias_file}")
    fi
    tag() { command tag --hidden "$@"; source "${alias_file}" 2>/dev/null }
    # alias rg=tag
    # alias ag=tag
fi
