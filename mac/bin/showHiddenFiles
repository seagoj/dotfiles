#!/usr/bin/env zsh
TOGGLE=$(defaults read com.apple.finder AppleShowAllFiles)

if [[ $TOGGLE == "TRUE" ]]; then
    TOGGLE="FALSE"
    echo "Hiding hidden files"
elif [[ $TOGGLE == "FALSE" ]]; then
    TOGGLE="TRUE"
    echo "Showing hidden files"
fi
defaults write com.apple.finder AppleShowAllFiles $TOGGLE
killall Finder
