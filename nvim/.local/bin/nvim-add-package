#!/usr/bin/env bash

repo="${1}"

IFS='/'
read -ra ADDR <<< "$repo"
vendor="${ADDR[0]}"
package="${ADDR[1]}"

prefix=https://github.com/
if [ 'seagoj' == "${vendor}" ]; then
    prefix=git@git.seago.io:
fi

cd "${DOTFILES}" && git submodule add --force --name "${package}" "${prefix}${repo}" nvim/.config/nvim/pack/bundle/opt/"${package}"
